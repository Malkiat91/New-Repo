@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="admin-form">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <!-- Widget starts -->
                    <div class="widget wred">
                        <div class="widget-head">
                            <i class="icon-lock"></i>Register 
                        </div>
                        <div class="widget-content">
                            <div class="padd">
                                <div class="form-horizontal">
                                    <!-- Registration form starts -->
                                    <!-- Name -->
                                    <div class="form-group">
                                        @*<label class="control-label col-lg-3" for="name">Name</label>*@
                                        @Html.LabelFor(m => m.Name, new { @class = "control-label col-lg-3" })
                                        <div class="col-lg-9">
                                            @*<input type="text" class="form-control" id="name">*@
                                            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.Name)
                                        </div>
                                    </div>
                                    <!-- Email -->
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.Email, new { @class = "control-label col-lg-3" })
                                        @*<label class="control-label col-lg-3" for="email">Email</label>*@
                                        <div class="col-lg-9">
                                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.Email)
                                            @*<input type="text" class="form-control" id="email">*@
                                        </div>
                                    </div>
                                    <!-- Select box -->
                                    <div class="form-group">
                                        <label class="control-label col-lg-3">Select Package</label>
                                        <div class="col-lg-9">
                                            @{
                                            var listItems = new List<System.Web.UI.WebControls.ListItem> {new System.Web.UI.WebControls.ListItem { Text = "Pro", Value = "1" }, new System.Web.UI.WebControls.ListItem { Text = "Basic", Value = "2"}, new System.Web.UI.WebControls.ListItem { Text = "Expert", Value = "3" } };
                                            }
                                           @* @Html.DropDownListFor(model => model, new SelectList(listItems,"Value","Text"),"-- Select --") *@
                                           @*  @Html.DropDownListFor(m=>m.Category,new[]{new SelectListItem(){Text="Pro",Value="1"},new SelectListItem(){Text="Basic",Value="2"},new SelectListItem(){Text="Expert",Value="2"}})*@
                                            @Html.DropDownList("DrpPackage",(IEnumerable<SelectListItem>)ViewBag.PackageList)
                                            <a style="color:green;" class="example-image-link" data-lightbox="example-1" href="~/Images/Packages.png" >View Package Details</a><br />
                                            @Html.ValidationMessageFor(m => m.Category)
                                        </div>
                                    </div>
                                    <!-- Username -->
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.UserName, new { @class = "control-label col-lg-3" })
                                        @*<label class="control-label col-lg-3" for="username">Username</label>*@
                                        <div class="col-lg-9">
                                            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.UserName)
                                            @*<input type="text" class="form-control" id="username">*@
                                        </div>
                                    </div>
                                    <!-- Password -->
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.Password, new { @class = "control-label col-lg-3" })
                                        @*<label class="control-label col-lg-3" for="email">Password</label>*@
                                        <div class="col-lg-9">
                                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.Password)
                                            @*<input type="password" class="form-control" id="password">*@
                                        </div>
                                    </div>
                                    <!--Confirm Password -->
                                    <div class="form-group">
                                        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label col-lg-3" })
                                        @*<label class="control-label col-lg-3" for="email">Password</label>*@
                                        <div class="col-lg-9">
                                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                                            @Html.ValidationMessageFor(m => m.ConfirmPassword)
                                            @*<input type="password" class="form-control" id="password">*@
                                        </div>
                                    </div>
                                    <!-- Accept box and button s-->
                                    <div class="form-group">
                                        <div class="col-lg-9 col-lg-offset-3">
                                            <div class="checkbox">
                                                <label>
                                                    <input type="checkbox" id="toggle" checked />
                                                    Accept Terms &amp; Conditions
                                                </label>
                                            </div>
                                            <br />
                                            <button id="Register" type="submit" class="btn btn-danger">Register</button>
                                            <button type="reset" class="btn btn-success">Reset</button>
                                        </div>
                                    </div>
                                    <br />
                                </div>
                            </div>
                        </div>
                        <div class="widget-foot">
                            Already Registred?  @Html.ActionLink("Login", "Login")
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

